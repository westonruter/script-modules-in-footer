{
	"name": "script-modules-in-footer",
	"author": "Weston Ruter",
	"license": "GPL-2.0-or-later",
	"prettier": "@wordpress/prettier-config",
	"homepage": "https://github.com/westonruter/script-modules-in-footer",
	"repository": "https://github.com/westonruter/script-modules-in-footer",
	"bugs": "https://github.com/westonruter/script-modules-in-footer/issues",
	"devDependencies": {
		"@wordpress/scripts": "^30.16.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0",
		"typescript": "^5.8.3"
	},
	"scripts": {
		"check-engines": "wp-scripts check-engines",
		"format": "wp-scripts format \"./**/*.{js,jsx,ts,tsx,mjs,json,yml}\" && wp-scripts lint-js \"./**/*.{js,jsx,ts,tsx,mjs}\" --fix && composer phpcbf && composer normalize",
		"lint": "tsc && npm run lint:js \"./**/*.{js,jsx,ts,tsx,mjs}\" && composer phpstan && composer phpcs && composer normalize --dry-run",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "git archive --format=zip --output=script-modules-in-footer.zip HEAD",
		"prepare": "husky"
	}
}
